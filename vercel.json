{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "build" }
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "https://pharmassist-pro-backend.onrender.com/api/$1" },
    { "src": "/docs", "dest": "https://pharmassist-pro-backend.onrender.com/docs" },
    { "src": "/health", "dest": "https://pharmassist-pro-backend.onrender.com/health" },
    { "src": "/(.*)", "dest": "frontend/build/$1" }
  ]
}
